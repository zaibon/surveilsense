{{define "clips"}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recorded Clips - SurveilSense</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-blue-700 p-4 text-white">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="font-bold text-xl hover:underline">SurveilSense Dashboard</a>
      <span>Recorded Clips</span>
    </div>
  </nav>
  <main class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Recorded Clips</h1>
    <div id="clips-list" class="grid grid-cols-1 md:grid-cols-3 gap-6"
         hx-get="/api/clips" hx-trigger="load, every 5s" hx-target="#clips-list" hx-swap="innerHTML">
      <!-- Clips will be rendered here -->
    </div>
  </main>
  <script src="https://unpkg.com/htmx.org@2.0.5/dist/htmx.min.js"></script>
</body>
</html>
{{end}}
